@model IEnumerable<KhumaloCraftFinalPOE.Models.Products>

@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        background-color: #E6D4B8; /* Light cappuccino color */
    }
    .product-card {
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 15px;
        margin: 10px;
        background-color: #fff;
        text-align: center;
    }
    .product-card img {
        max-width: 100%;
        height: auto;
        border-radius: 8px;
    }
    .mission-section {
        padding: 20px;
        background-color: #fff;
        border-radius: 8px;
        margin: 20px 0;
    }
</style>

<div class="container">
    <h1 class="text-center">Welcome to Khumalo Craft</h1>
    <div class="mission-section">
        <h2>Our Mission</h2>
        <p>At Khumalo Craft, we strive to provide the highest quality products to our customers. Our mission is to blend craftsmanship with innovation, creating unique and desirable products that enhance the lives of our customers.</p>
    </div>

    <h2>Featured Products</h2>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <div class="product-card">
                    <img src="@item.ImageUrl" alt="Product Image" />
                    <h5>@item.Name</h5>
                    <p>@item.Description</p>
                    <p><strong>Price:</strong> @item.Price.ToString("C")</p>
                    <form asp-action="AddToCart" asp-controller="Transactions" method="post">
                        <input type="hidden" name="ProductId" value="@item.ProductId" />
                        <button type="submit" class="btn btn-primary">Add to Cart</button>
                    </form>
                </div>
            </div>
        }
    </div>
</div>
